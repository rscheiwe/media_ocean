<h1>Sign Up</h1>
<%= form_for @user do |f| %>
<%= f.label :username %>
<%= f.text_field :username %><br/>
<%= f.label :email %>
<%= f.email_field :email %><br/>
<%= f.label :bio %>
<%= f.text_area :bio %><br/>
<%= f.label :profile_pic %>
<%= f.text_field :profile_pic, placeholder: "enter a picture URL here" %><br/>
<%= f.label :password %>
<%= f.password_field :password %><br/>
<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation %><br/>
<%= f.submit %>
<% end %>
