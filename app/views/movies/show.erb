<div class="container">
<div class="row">
	<div class="col-md">

		<img src="https://image.tmdb.org/t/p/w500/<%=@movie.poster_path%>", width="90%"><br><br>
	</div>
	<div class="col-md">
		<h2><%= @movie.title %></h2><br>
		<%= link_to "add to my watchlist", user_movies_path(user_id: current_user.id, movie_id: @movie.id), method: :post, class: "button"%>&nbsp;&nbsp;&nbsp;
		<%= link_to "Mark as seen", user_movies_path(user_id: current_user.id, movie_id: @movie.id), method: :post, class: "button" %><br><br>
		<%= @movie.overview %>
		<br>
		<br>
		<p>Released: <%= @movie.release_date %></p>
		<hr>
		<h4>Reviews</h4>
		<% if @movie.reviews.length == 0 %>
		This title doesn't have any reviews yet. Mark it as seen to write one.
		<% else %>
		  <% @movie.reviews.each do |review| %>
		  <%= link_to review.user.username, user_path(review.user) %> (<%= review.rating%>/5 stars) <br>
		  <%= review.created_at %><br>
		  <%= review.content %><br>
		  <p></p>
		  <% end %>
		<% end %>
	</div>
</div>
</div>